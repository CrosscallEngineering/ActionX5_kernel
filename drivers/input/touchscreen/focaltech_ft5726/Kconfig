#
# Focaltech Touchscreen driver configuration
#

config FT_INCELL_CHIP
	bool "FocalTech touchscreens incell chip support."
	depends on TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 touchscreen FH function.
	  else say N

config TOUCHSCREEN_FT5726_IRQ_WAKE
	bool "FocalTech touchscreens dont register .pm"
	depends on TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 touchscreen dont register .pm.
	  else say N

config TOUCHSCREEN_FT5726_FH
	bool "FocalTech touchscreens FH support."
	depends on TOUCHSCREEN_USB_CHECK && TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 touchscreen FH function.
	  else say N

config TOUCHSCREEN_FT5726_GESTURE
	bool "FocalTech touchscreens gesture function"
	depends on TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 touchscreen gesture function.
	  else say N

config TOUCHSCREEN_FT5726_GESTURE_DRIVER
	bool "FocalTech touchscreens gesture function realized in driver"
	depends on TOUCHSCREEN_FT5726_GESTURE
	help
	  Say Y here if you need a FT5726 touchscreen gesture function in driver.
	  else say N
	 
