	  Say Y here if you need a FT5726 hall mode in driver.
	  else say N

config TOUCHSCREEN_FT5726_PRAMUPDATE
	bool "FocalTech touchscreens ft8719 pramboot data in driver"
	depends on TOUCHSCREEN_FT5726
	default n
	help
	  Say Y here if you need a ft8719 pramboot data in driver.
	  else say N

config TOUCHSCREEN_FT5726_APK_TEST
	bool "FocalTech touchscreens apk test function realized in driver"
	depends on TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 apk test in driver.
	  else say N

config TOUCHSCREEN_FT5726_SUB
	bool "FocalTech touchscreens sub function realized in driver"
	depends on TOUCHSCREEN_FT5726
	help
	  Say Y here if you need a FT5726 as sub TP in driver.
	  else say N

config TOUCHSCREEN_FT5726_PSENSOR
	tristate "FocalTech proximity feature support"
	depends on TOUCHSCREEN_FT5726 && SENSORS
	help
	  Say Y here if you want to support FT5726's proximity
	  feature.

	  If unsure, say N.
